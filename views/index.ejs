            </ul>
            
            

            <h1>
                <span class="h1">Наши программы</span>
            </h1>



            <%- include("partials/categories-list", { 
            
                items: courses.subCategories, 
            
                actions: [{
                        name: "courses",
                        displayName: "Подробнее",
                        buttonClass: "primary"
                    }
                ] 
            }) %>

        </div>

        <div class="col-sm-3 aside">

            <h1>
                <span class="h1">Новости</span>
            </h1>
            <% latestPosts.forEach(item => { %>
                <p>
                    <span class="fa fa-vk" style="color: #4c75a3;  width: 20px;"></span>
                    <strong>
                        <%= item.date %>
                    </strong>
                </p>
                <p>
                    <%- item.text.replace("\n", "<br>") %>
                        <a href="#" onclick="window.open('<%= item.link %>', '_blank'); return false;">Читать полностью</a>
                </p>

                <hr/>
                <% }); %>
        </div>
    </div>
    


