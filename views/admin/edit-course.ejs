<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head") %>
</head>
<body>
    <!-- inputs: course, categories -->
    <div class="container">
        <form method="POST">
            
            <div class="form-group">
                <label for="title">Наименование курса</label>
                <input type="text" class="form-control" required name="title" id="title" placeholder="Наименование курса" value="<%= course.title %>">
            </div>  
            
            <div class="form-group">
                <label for="typeId">Категория курса</label>
                <select id="typeId" class="form-control" required name="typeId">
                    <% categories.forEach(cat => {    <!-- for all other categories -->
                        
                        const selected = cat.id == course.typeId ? "selected" : null; %>
                        
                        <option value="<%= cat.id %>" <%=selected %>>
                            <%= cat.title || "root" %>
                        </option>
                    <% }); %>
            
                </select>
            </div>

            <div class="form-group">
                <label for="desciption">Краткое описание курса</label>
                <input type="text" class="form-control" required name="description" id="description" placeholder="category desciption" value="<%= course.description %>">
            </div>
            
            <div class="form-group">
                    <label for="widgetClass">Background color for your class</label>
                    <input type="text" class="form-control" name="bgColor" id="bgColor" placeholder="bg color" value="<%= course.bgColor %>">
            </div>  

            <div class="form-group">
                    <label for="contents">Подробное описание курса</label>
                    <textarea type="text" class="form-control" name="contents" id="contents" placeholder="содержание">
                            <%= course.contents %>"
                    </textarea>
            </div>  
            
            <button type="submit" class="btn btn-primary">Сохранить</button>

        </form>
    </div>
</body>
