<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head") %>
</head>
<body class="happy-children">
    
    <%- include("../partials/nav") %>
    
    <%- include("../partials/index/jumbotron", { title: "Курсы", subTitle: title }) %>

    <div class="container">
        
            <h2>Курсы</h2>
            
            <!-- Добавление курса (добавление сразу в корень - невозможно!) -->
        
            <% if (id) { %>
                
                <a href="../add-course/<%= id %>" class="btn btn-primary">Добавить курс</a>
            
            <% } %>

        <% if (data.courses && data.courses.length) { %>
            
            
            <%- include("../partials/courses-list", { 
                courses: data.courses, 
                actions: [{
                    name: "../edit-course",
                    displayName: "Изменить",
                    buttonClass: "success"
                }, {
                    name: "../delete-course",
                    displayName: "Удалить",
                    buttonClass: "danger"
                }
                ] 
            }) %>
            <% }  else { %>
                <p>Nothing found</p>
                <% }; %>
        
        <h2>Подкатегории</h2>
        
        <% if (id) { %>
            <a href="../add-category/<%= id %>" class="btn btn-primary">Добавить категорию</a>
        <% } else { %>
            <a href="add-category" class="btn btn-primary">Добавить категорию</a>
        <% } %>

        <% if (data.subCategories && data.subCategories.length > 0) { %>
            
            
            <%- include("../partials/categories-list", { 
                
                items: data.subCategories, 
                
                actions: [{
                    name: "",
                    displayName: "Enter",
                    buttonClass: "primary"
                },
                {
                        name: "../edit-category",
                        displayName: "Изменить",
                        buttonClass: "success"
                    }, {
                        name: "category/delete",
                        displayName: "Удалить",
                        buttonClass: "danger"
                    }
                ] 
            }) %> 

        <% }  else { %>
        <p>Nothing found</p>
        <% }; %>
    </div>
</body>
</html>